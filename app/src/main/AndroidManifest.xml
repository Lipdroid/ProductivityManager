<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ben.work.lipuhossain.productivitymanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ben.work.lipuhossain.productivitymanager.MainActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="ben.work.lipuhossain.productivitymanager.HistoryActivity" />
        <activity android:name="ben.work.lipuhossain.productivitymanager.DetailsActivity" />
        <activity android:name="ben.work.lipuhossain.productivitymanager.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ben.work.lipuhossain.productivitymanager.HelpActivity"></activity>
    </application>

</manifest>