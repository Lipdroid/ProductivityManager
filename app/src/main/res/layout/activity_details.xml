<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lipuhossain.productivitymanager.DetailsActivity">

    <RelativeLayout
        android:id="@+id/rl_status"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        >
        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Patient Treatment Time: "
                android:textSize="16dp"
                android:textColor="@color/common_white_1"/>

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:52"
                android:textSize="20dp"
                android:textColor="@color/common_white_1"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/left"
            android:layout_below="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="1dp"
                    android:text="GOAL"
                    android:textColor="@color/common_white_1"
                    android:textSize="20dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Patient Time:"
                    android:textColor="@color/common_white_1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_target_treatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:52"
                    android:textColor="@color/common_white_1"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Clock Out:"
                    android:textColor="@color/common_white_1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_target_clock_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:52 pm"
                    android:textColor="@color/common_white_1"
                    android:textSize="16dp" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_white_1"
                android:text="Productivity"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/target_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="40%"
                android:textColor="@color/common_yellow"
                android:textSize="35dp" />

        </LinearLayout>


        <LinearLayout
android:layout_toRightOf="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/head"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="1dp"
                    android:text="YOU"
                    android:textColor="@color/common_white_1"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Patient Time:"
                    android:textColor="@color/common_white_1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_actual_treatment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:52"
                    android:textColor="@color/common_white_1"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Clock Out:"
                    android:textColor="@color/common_white_1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_actual_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:52 pm"
                    android:textColor="@color/common_white_1"
                    android:textSize="16dp" />


            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_white_1"
                android:text="Productivity"
                android:gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/actual_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="40%"
                android:textColor="@color/common_yellow"
                android:textSize="35dp" />

        </LinearLayout>


    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="11dp"
            android:padding="3dp"
            android:onClick="afterClickback"
            android:src="@drawable/left_arrow" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Details"
            android:textColor="@color/common_white_1"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="11dp"
            android:padding="3dp"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/schedule_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_status"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none">

    </ListView>
</RelativeLayout>
